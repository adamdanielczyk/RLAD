{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "Kotlin & Compose Compiler",
      "matchPackageNames": [
        "com.google.devtools.ksp{/,}**",
        "androidx.compose.compiler{/,}**",
        "/^org\\.jetbrains\\.kotlin[.:]/"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "automerge": false
    }
  ],
  "extends": [
    "config:recommended",
    ":automergeAll",
    ":automergeBranch",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone"
  ]
}
